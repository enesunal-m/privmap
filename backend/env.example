# PrivMap Backend Configuration
# Copy this file to .env and adjust values as needed

# Application
APP_NAME=PrivMap
APP_VERSION=0.1.0
DEBUG=true

# Database (PostgreSQL with PostGIS)
# For development without PostGIS, the app will use in-memory data
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/privmap

# Privacy defaults
DEFAULT_EPSILON=1.0
MIN_EPSILON=0.01
MAX_EPSILON=10.0
DEFAULT_SESSION_BUDGET=5.0

# PrivTree algorithm
PRIVTREE_FANOUT=4
PRIVTREE_THETA=0.0

# Map bounds (Porto, Portugal)
MAP_MIN_LON=-8.7
MAP_MAX_LON=-8.5
MAP_MIN_LAT=41.1
MAP_MAX_LAT=41.25

# CORS origins (comma-separated)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

